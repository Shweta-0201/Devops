<%= form_for @reminder do |f| %>
    <div class="mb-3">
      <label for="name" class="form-label">Title</label>
      <%=f.text_field :title, class: "form-control",placeholder: "Title", required: true %>
      <br>
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Content</label>
      <%=f.text_field :content, class: "form-control",placeholder: "Content", required: true %>
      <br>
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Remainder Type</label>
      <%= f.select :reminder_type_id,ReminderType.all.map{|rt| [rt.name,rt.id]},{prompt: "Select Remainder type"}, {class: "form-control",placeholder: "Content", required: true} %>
      <br>
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Expires at</label>
      <%=f.datetime_field :expire_at, class: "form-control",placeholder: "Expiry date", required: true %>
      <br>
    </div>
    <div class="mb-3">
      <label for="name" class="form-label">Status</label>
      <%=f.select :status,Reminder.statuses.map{|key,value| [key.titleize,key]},{prompt: "Select status"}, {class: "form-control",placeholder: "Select status", required: true} %>
      <br>
    </div>
    <div class="mb-3">
      <%= f.submit "Submit",class: "btn-success" %>
    </div>
  <% end %>